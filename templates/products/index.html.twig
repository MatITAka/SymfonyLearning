{% extends 'base.html.twig'%}

{% block title %}
    Products
{%  endblock %}

{% block container %}
    <h1 class="text-center mb-5">Mes produits</h1>

    <a href="{{ path('app_product_create') }}" class="btn btn-primary mb-3">Créer un produit</a>

  {% for successMessage in app.flashes('success') %}

    <div class="alert alert-success" role="alert">
        {{ successMessage }}
    </div>
  {% endfor %}

    <div class="row mt-2">

        {% for product in products %}
            <div class="col-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title
                        ">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">{{ product.price }} €</p>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}